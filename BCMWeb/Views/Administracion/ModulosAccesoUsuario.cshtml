@using BCMWeb.Models

@model ModulosUsuario

<script type="text/javascript">
    function onSelectedChanged(idE, key, idU, checked) {
        lp.Show();

        var _chk = checked ? "true" : "false";

        $.ajax({
            type: 'POST',
            url: '/Administracion/SeleccionarModuloUsuario',
            dataType: 'json',
            data: {
                idEmpresa: idE,
                idModulo: key,
                idUsuario: idU,
                Checked: _chk
            },
            success: function (data) {
                tlModulos.PerformCallback();
            },
            error: function () {
                lp.Hide();
            }
        });
    }
    function onUpdateChanged(idE, key, idU, checked) {
        lp.Show();

        var _chk = checked ? "true" : "false";
        $.ajax({
            type: 'POST',
            url: '/Administracion/ActualizarModuloUsuario',
            dataType: 'json',
            data: {
                idEmpresa: idE,
                idModulo: key,
                idUsuario: idU,
                Checked: _chk
            },
            success: function (data) {
                $("#IdEmpresaSelected").val(idE);
                $("#IdUsuario").val(idU);
                tlModulos.PerformCallback();
            },
            error: function () {
                lp.Hide();
            }
        });

        tlModulos.PerformCallback();
    }
    function onDeleteChanged(idE, key, idU, checked) {
        lp.Show();

        var _chk = checked ? "true" : "false";
        $.ajax({
            type: 'POST',
            url: '/Administracion/EliminarModuloUsuario',
            dataType: 'json',
            data: {
                idEmpresa: idE,
                idModulo: key,
                idUsuario: idU,
                Checked: _chk
            },
            success: function (data) {
                $("#IdEmpresaSelected").val(idE);
                $("#IdUsuario").val(idU);
                tlModulos.PerformCallback();
            },
            error: function () {
                lp.Hide();
            }
        });

        tlModulos.PerformCallback();
    }
